{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "hubName": {
            "type": "string"
        },
        "dpsName": {
            "type": "string"
        }
    },
    "variables": {
        "apiVersion": {
            "iothub": "2021-07-02-preview",
            "dps": "2022-02-05"
        },
        "skus": {
            "hubSkuName": "S1",
            "dpsSkuName": "S1",
            "dpsTier": "Standard",
            "hubCapacity": 1,
            "d2c_partitions": 4
        }
    },
    "resources": [
        {
            "type": "Microsoft.Devices/IotHubs",
            "apiVersion": "[variables('apiVersion').iothub]",
            "name": "[parameters('hubName')]",
            "location": "[resourceGroup().location]",
            "sku": {
                "name": "[variables('skus').hubSkuName]",
                "capacity": "[variables('skus').hubCapacity]"
            },
            "properties": {
                "eventHubEndpoints": {
                    "events": {
                        "retentionTimeInDays": 1,
                        "partitionCount": "[variables('skus').d2c_partitions]"
                    }
                },
                "features": "None",
                "enableDataResidency": false,
                "disableLocalAuth": false
            }
        },
        {
            "type": "Microsoft.Devices/provisioningServices",
            "apiVersion": "[variables('apiVersion').dps]",
            "name": "[parameters('dpsName')]",
            "location": "[resourceGroup().location]",
            "sku": {
                "name": "[variables('skus').dpsSkuName]",
                "tier": "[variables('skus').dpsTier]",
                "capacity": 1
            },
            "properties": {
                "iotHubs": [
                    {
                        "connectionString": "[concat('HostName=',parameters('hubName'),'.azure-devices.net;SharedAccessKeyName=iothubowner;SharedAccessKey=',listKeys(resourceId('Microsoft.Devices/IotHubs/Iothubkeys', parameters('hubName'), 'iothubowner'), variables('apiVersion').iothub).primaryKey])",
                        "location": "[resourceGroup().location]"
                    }
                ],
                "allocationPolicy": "Hashed",
                "enableDataResidency": false
            },
            "dependsOn": [
                "[resourceId('Microsoft.Devices/IotHubs', [parameters('hubName')])]"
            ]
        }
    ],
    "outputs": {
        "iothub": {
            "type": "object",
            "value": {
                "policyKey": "[listKeys(resourceId('Microsoft.Devices/IotHubs/Iothubkeys', parameters('hubName'), 'iothubowner'), variables('apiVersion').iothub).primaryKey]",
                "namespace": "[parameters('hubName')]"
            }
        },
        "dps": {
            "type": "object",
            "value": {
                "policyKey": "[listKeys(resourceId('Microsoft.Devices/provisioningServices',parameters('dpsName')), 'provisioningserviceowner'), variables('apiVersion').dps).primaryKey]",
                "idScope":"[reference(resourceId('Microsoft.Devices/provisioningServices',parameters('dpsName')).properties.idScope]",
                "namespace": "[parameters('dpsName')]"
            }
        }
    }
}