{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "variables": {
        "apiVersions": {
            "sqlserver": "2021-02-01-preview"
        },
        "names": {
            "sqlserverName": "iotcsolutionsql",
            "databaseName": "iotcsolutiondb"
        }
    },
    "resources": [
        {
            "type": "Microsoft.Sql/servers",
            "apiVersion": "[variables('apiVersions').sqlserver]",
            "name": "[variables('names').sqlserverName]",
            "location": "[resourceGroup().location]",
            "tags": {
                "displayName": "SQL Server"
            },
            "properties": {
                "administratorLogin": "[parameters('sqlAdministratorLogin')]",
                "administratorLoginPassword": "[parameters('sqlAdministratorLoginPassword')]",
                "version": "12.0",
                "minimalTlsVersion": "1.2",
                "restrictOutboundNetworkAccess": "Disabled"
            }
        },
        {
            "type": "Microsoft.Sql/servers/databases",
            "apiVersion": "[variables('apiVersions').sqlserver]",
            "name": "[format('{0}/{1}', variables('names').sqlserverName, variables('names').databaseName)]",
            "location": "[resourceGroup().location]",
            "tags": {
                "displayName": "Database"
            },
            "sku": {
                "name": "GP_S_Gen5",
                "tier": "GeneralPurpose",
                "family": "Gen5",
                "capacity": 1
            },
            "kind": "v12.0,user,vcore,serverless",
            "properties": {
                "collation": "SQL_Latin1_General_CP1_CI_AS",
                "maxSizeBytes": 1073741824
            },
            "dependsOn": [
                "[resourceId('Microsoft.Sql/servers', [variables('names').sqlserverName])]"
            ]
        },
        {
            "type": "Microsoft.Sql/servers/firewallRules",
            "apiVersion": "[variables('apiVersions').sqlserver]",
            "description":"Allow all Azure resources",
            "name": "[format('{0}/{1}', [variables('names').sqlserverName], 'AllowAllWindowsAzureIps')]",
            "dependsOn": [
                "[resourceId('Microsoft.Sql/servers', [variables('names').sqlserverName])]"
            ]
        }
    ]
}